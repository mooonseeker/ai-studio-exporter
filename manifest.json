{
    "manifest_version": 3,
    "name": "AI Studio Exporter",
    "version": "1.0.3",
    "description": "A Chrome extension that exports Gemini chat history from Google AI Studio to Markdown format.",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://aistudio.google.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}